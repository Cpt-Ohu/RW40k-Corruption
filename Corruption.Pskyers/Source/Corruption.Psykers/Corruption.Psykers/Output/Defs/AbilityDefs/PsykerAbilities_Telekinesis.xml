  <!-- ========================= Assail ===================================== -->
  
  <AbilityDef ParentName="PsykerAbilityBase" Name="TelekAssailBase">
    <defName>TelekAssailI</defName>
    <label>assail</label>
    <description>The Psyker lifts a boulder or heavy object from the ground and hurls it towards his enemies.</description>
    <level>20</level>
    <iconPath>UI/Abilities/TelekAssail</iconPath>
    <hotKey>Misc1</hotKey>
    <statBases>
      <Ability_EntropyGain>15</Ability_EntropyGain>
      <Ability_Duration>1</Ability_Duration>
    </statBases>
    <verbProperties>
      <defaultProjectile>PsyAssailBoulderI</defaultProjectile>
      <warmupTime>5.0</warmupTime>
      <range>15</range>
      <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
      <burstShotCount>1</burstShotCount>
      <soundCast>WarpBolt</soundCast>
      <soundCastTail>GunTail_Medium</soundCastTail>
      <targetParams>
        <canTargetSelf>False</canTargetSelf>
        <canTargetAnimals>True</canTargetAnimals>
        <canTargetLocations>True</canTargetLocations>
        <canTargetMechs>False</canTargetMechs>
      </targetParams>
    </verbProperties>
    <comps>
      <li Class="CompProperties_AbilityEffect">
        <compClass>Corruption.Psykers.CompAbilityEffect_PsyProjectile</compClass>
        <psychic>False</psychic>
        <applyGoodwillImpactToLodgers>False</applyGoodwillImpactToLodgers>
        <applicableToMechs>True</applicableToMechs>
      </li>
    </comps>
  </AbilityDef>

