  <!-- ========================= Warpfire ===================================== -->
  <AbilityDef ParentName="PsykerAbilityBase" Name="PyroFlameBreathBase">
    <defName>PyroFlameBreathI</defName>
    <label>flame breath</label>
    <description>A gust of psychic flames pours from the Psykers eyes and mouth.</description>
    <level>20</level>
    <iconPath>UI/Abilities/PyroFlameBreath</iconPath>
    <hotKey>Misc1</hotKey>
    <statBases>
      <Ability_EntropyGain>15</Ability_EntropyGain>
      <Ability_Duration>1</Ability_Duration>
    </statBases>
    <verbProperties>
      <defaultProjectile>PSYWarpfireJetI</defaultProjectile>
      <warmupTime>5.0</warmupTime>
      <range>5</range>
      <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
      <burstShotCount>4</burstShotCount>
      <soundCast>WarpBolt</soundCast>
      <soundCastTail>GunTail_Medium</soundCastTail>
      <muzzleFlashScale>9</muzzleFlashScale>
    </verbProperties>
    <comps>
      <li Class="CompProperties_AbilityEffect">
        <compClass>Corruption.Psykers.CompAbilityEffect_PsyProjectile</compClass>
        <psychic>False</psychic>
        <applyGoodwillImpactToLodgers>False</applyGoodwillImpactToLodgers>
        <applicableToMechs>True</applicableToMechs>
      </li>
    </comps>
  </AbilityDef>


